{% trans_default_domain 'FOSUserBundle' %}
<div class="modal fade" id="resettingModal" tabindex="-1" role="dialog" aria-labelledby="resettingModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="resettingModalLabel">Passwort zurücksetzen</h4>
      </div>
      <div class="modal-body">
        <div class="alert alert-danger" role="alert" id="error" style="display: none;">
          <button type="button" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <strong>Es ist ein Fehler aufgetreten!</strong> <span id="message"></span>
        </div>
        
         <div class="alert alert-success" role="alert" id="success" style="display: none;">
          <strong>Rücksetzung erfolgreich beantragt!</strong><br/><span id="message"></span>
        </div>
        
        <form id="form-resetting" action="{{ path("resetting_send_email") }}" method="post" novalidate="novalidate">
    		<div class="form-group">
    			<label for="email" class="control-label">E-Mail Adresse</label>
    			<input type="text" class="form-control" id="email" name="email" placeholder="E-Mail-Adresse" title="Geben Sie Ihre E-Mail Adresse an" required="required">
    			<span class="help-block"></span>
    		</div>
    		<div class="form-group">
    			<label for="username" class="control-label">Benutzername</label>
    			<input type="text" class="form-control" id="username" name="username" {% if last_username is defined %}value="{{ last_username }}" {% endif %}placeholder="Benutzername" title="Geben Sie Ihren Benutzernamen an" required="required">
    			<span class="help-block"></span>
    		</div>
    		<button type="submit" id="submit" name="submit" class="btn btn-success btn-lg btn-block"><i class="fa fa-spinner fa-spin" style="display:none"></i> Passwort zurücksetzen</button>
    		<a href="" type="button" data-toggle="modal" data-target="#loginModal" class="btn btn-default btn-block">Account bereits vorhanden?</a>
    	</form>
      </div>
    </div>
  </div>
</div>