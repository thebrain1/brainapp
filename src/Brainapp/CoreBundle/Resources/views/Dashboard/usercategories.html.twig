{% extends 'BrainappCoreBundle:Dashboard:default_dashboard.html.twig' %}

{# override dashboardContent #}
{% block dashboardContent %}

<h1 class="page-header">Kategorien von {{ username }} ({{ userid }})</h1>
<div class="row placeholders">
  <div class="col-xs-6 col-sm-3 placeholder">
    <p><a class="btn btn-primary btn-lg" href="{{ path('add_user_main_category') }}" role="button">Hauptkategorie hinzufügen</a></p>
  </div>
</div>

<h2 class="sub-header">Hauptkategorien</h2>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
         <tr>
            <th>ID</th>
            <th>Name</th>
            <th></th>
         </tr>
       </thead>
       <tbody>
            {% for cat in userCategories %}
              <tr>
                 <td width="3%" align="right">{{ cat.categoryId }}</td>
                 <td width="80%">{{ cat.categoryName }}</td>
                 <td width="17%">
                    <div class="btn-group" role="group" aria-label="...">
                       <button type="button" class="btn btn-default" data-toggle="modal" data-target="#modalMaskEditMainCategory" title="Hauptkategorie bearbeiten" >
                          <a href="#"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                       </button>
                       <button type="button" class="btn btn-default" title="Hauptkategorie l&ouml;schen">
                          <a href="#"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                       </button>
                       <button type="button" class="btn btn-default" title="Unterkategorie hinzuf&uuml;gen">
                          <a href="#"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>
                       </button>
                       <button type="button" class="btn btn-default" title="Unterkategorie anzeigen">
                          <a href="#"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></a>
                       </button>
                    </div>
                 </td>
              </tr>
            {% endfor %}
       </tbody>
     </table>
   </div>
   
  <h2 class="sub-header">Nebenkategorien von PLATZHALTER</h2>
  <div class="table-responsive">
  <table class="table table-striped">
    <thead>
         <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Ist Unterkategorie?</th>
            <th>Hauptkategorie</th>
            <th></th>
         </tr>
       </thead>
       <tbody>
            {% for cat in userCategories %}
              <tr>
                 <td width="3%" align="right">{{ cat.categoryId }}</td>
                 <td width="60%">{{ cat.categoryName }}</td>
                 <td width="10%">{% if cat.isSubCategory == true %}ja{% endif %}</td>
                 <td width="10%">{{ cat.parentCategoryId }}</td>
                 <td align="left" width="17%">
                    <div class="btn-group" role="group" aria-label="...">
                       <button type="button" class="btn btn-default" data-toggle="modal" data-target="#modalMaskEditSubCategory">
                          <a href="#"><span class="glyphicon glyphicon-pencil" aria-hidden="true" title="Unterkategorie bearbeiten"></span></a>
                       </button>
                       <button type="button" class="btn btn-default">
                          <a href="#"><span class="glyphicon glyphicon-remove" aria-hidden="true" title="Unterkategorie l&ouml;schen"></span></a>
                       </button>
                    </div>
                 </td>
              </tr>
            {% endfor %}
       </tbody>
     </table>
   </div>
   
   <!-- Modal für Hauptkategorie -->
   <div class="modal fade" id="modalMaskEditMainCategory" role="dialog">
     <div class="modal-dialog">
       <!-- Modal content-->
       <div class="modal-content">
         <div class="modal-header">
           <button type="button" class="close" data-dismiss="modal">&times;</button>
           <h4 class="modal-title">Hauptkategorie bearbeiten</h4>
         </div>
         <div class="modal-body">
          <!-- {{ render(controller('BrainappCoreBundle:Dashboard/DashboardAddUserCat:addUserMainCategory')) }} --> 
         </div>
         <div class="modal-footer">
           <button type="button" class="btn btn-default" data-dismiss="modal">Speichern</button>
           <button type="button" class="btn btn-default" data-dismiss="modal">Abbrechen</button>
         </div>
       </div>
     </div>
   </div>        
 
   <!-- Modal für Subkategorie -->
   <div class="modal fade" id="modalMaskEditSubCategory" role="dialog">
     <div class="modal-dialog">
       <!-- Modal content-->
       <div class="modal-content">
         <div class="modal-header">
           <button type="button" class="close" data-dismiss="modal">&times;</button>
           <h4 class="modal-title">Nebenkategorie bearbeiten</h4>
         </div>
         <div class="modal-body">
           <div class="input-group">
           <span class="input-group-addon" id="sizing-addon2">Name</span>
           <input type="text" class="form-control" placeholder="Name" aria-describedby="sizing-addon2">
           </div>
         </div>
         <div class="modal-footer">
           <button type="button" class="btn btn-default" data-dismiss="modal">Speichern</button>
           <button type="button" class="btn btn-default" data-dismiss="modal">Abbrechen</button>
         </div>
       </div>
     </div>
   </div>
{% endblock %}

          