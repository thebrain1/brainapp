{% extends 'BrainappCoreBundle:Dashboard:default_dashboard.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets '@BrainappCoreBundle/Resources/public/css/panelBoxStyle.css' filter="cssrewrite" %}
        <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}"/>
    {% endstylesheets %}
    {% stylesheets '@BrainappCoreBundle/Resources/public/css/userBudgets.css' filter="cssrewrite" %}
        <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock %}

{# override dashboardContent #}
{% block dashboardContent %}

<h1 class="page-header">Budgets von {{ username }} für {{ monthLabel }} {{ year }}</h1>
<div class="row placeholders">
 	<form action="{{ path('show_user_budgets_for_month') }}" method="POST">
		<div class="col-md-3 placeholder">
			<select name="selectedBudgetTimeframeMonth" id="selectedBudgetTimeframeMonth" class="form-control select-budget-timeframe">
				<option value="1"  {% if month == 1%}selected{% endif %} >Januar</option>
				<option value="2"  {% if month == 2%}selected{% endif %} >Februar</option>
				<option value="3"  {% if month == 3%}selected{% endif %} >März</option>
				<option value="4"  {% if month == 4%}selected{% endif %} >April</option>
				<option value="5"  {% if month == 5%}selected{% endif %} >Mai</option>
				<option value="6"  {% if month == 6%}selected{% endif %} >Juni</option>
				<option value="7"  {% if month == 7%}selected{% endif %} >Juli</option>
				<option value="8"  {% if month == 8%}selected{% endif %} >August</option>
				<option value="9"  {% if month == 9%}selected{% endif %} >September</option>
				<option value="10" {% if month == 10%}selected{% endif %}>Oktober</option>
				<option value="11" {% if month == 11%}selected{% endif %}>November</option>
				<option value="12" {% if month == 12%}selected{% endif %}>Dezember</option>
			</select>
		</div>
		<div class="col-md-3 placeholder">
			<select name="selectedBudgetTimeframeYear" id="selectedBudgetTimeframeYear" class="form-control select-budget-timeframe">
				<option value="2010" {% if year == 2010%}selected{% endif %}>2010</option>
				<option value="2011" {% if year == 2011%}selected{% endif %}>2011</option>
				<option value="2012" {% if year == 2012%}selected{% endif %}>2012</option>
				<option value="2013" {% if year == 2013%}selected{% endif %}>2013</option>
				<option value="2014" {% if year == 2014%}selected{% endif %}>2014</option>
				<option value="2015" {% if year == 2015%}selected{% endif %}>2015</option>
				<option value="2016" {% if year == 2016%}selected{% endif %}>2016</option>
				<option value="2017" {% if year == 2017%}selected{% endif %}>2017</option>
				<option value="2018" {% if year == 2018%}selected{% endif %}>2018</option>
				<option value="2019" {% if year == 2019%}selected{% endif %}>2019</option>
				<option value="2020" {% if year == 2020%}selected{% endif %}>2020</option>
			</select>
		</div>
		<button type="submit" class="btn btn-default">Abrufen</button>
	</form>
</div>

<div id="budgetPlaceholder">
	{% include 'BrainappCoreBundle:Dashboard/UserBudgetViews/Widgets:widget_showBudgets.html.twig' with {'budgets': budgets} %}
</div>
{% endblock %}

{# override javascripts #}
{% block javascripts %}	
	{{ parent() }}
	{% javascripts '@BrainappCoreBundle/Resources/public/js/manipulateShowCurrency.js' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
	{% javascripts '@BrainappCoreBundle/Resources/public/js/canvasBudgetBalance.js' %}
    	<script src="{{ asset_url }}"></script>
	{% endjavascripts %}
{% endblock %}
