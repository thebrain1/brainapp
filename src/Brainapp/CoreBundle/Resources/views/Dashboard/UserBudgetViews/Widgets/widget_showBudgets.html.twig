{#                                 <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>#}
{#                             </button>#}
                        </div>
                  </div>
                  <table class="table">
                    <tbody>
                        <tr>
                            <td style="vertical-align:middle">Verbrauch</td>
                            <td align="right">
                            	<canvas class="canvasBudgetBalance" href="#" data-toggle="tooltip" title="{{ budget.budgetVerbrauchtForCanvasHover}}" data-budgetVorlageValue="{{ budget.budgetVorlage.budgetValue }}" data-budgetVerbraucht="{{ budget.budgetVerbraucht }}">Der Browser kann kein Canvas!</canvas>
                            </td>
                        </tr>
                        <tr>
                            <td>Restbetrag</td>
                            <td align="right"> <data class="data-currency">{{ budget.budgetVorlage.budgetValue}}</data> -  <data class="data-currency">{{ budget.budgetVerbraucht }}</data> = <data class="data-currency data-balance">{{ budget.restbetrag }}</data></td>
                        </tr>
                        <tr>
                        	<td>Kategorie</td>
                        	<td align="right">{% if budget.budgetVorlage.category.parentCategory is not null %}<b>{{budget.budgetVorlage.category.parentCategory.categoryName}}:</b> {% endif%}{{ budget.budgetVorlage.category.categoryName }}</td>
                        </tr>
                        <tr>
                        	<td>Account</td>
                        	<td align="right">{{ budget.budgetVorlage.account.accountName }}</td>
                        </tr>
                        <tr>
                            <td>wird zur√ºckgesetzt</td>
                            <td align="right">{{ budget.budgetVorlage.resetPeriodObject.periodDescription }} am {{ budget.budgetVorlage.resetPeriodObject.triggerDay.label }}</td>
                        </tr>
                        <tr>
                        	<td>Zeitraum</td>
                        	<td align="right">{{ budget.budgetZeitraumVon }} bis {{ budget.budgetZeitraumBis }}</td>
                        </tr>
                    </tbody>
                  </table>
                </div>
	   {% endfor %}