{% extends 'BrainappCoreBundle:Dashboard/UserCategoryViews:showUserCategories.html.twig' %}

{# override showUserCategoriesHeader #}
{% block showUserCategoriesHeader %}
<h1 class="page-header">Unterkategorien von "{{ parentCategory.categoryName }}"</h1>
<div class="row placeholders">
  <div class="col-xs-6 col-sm-3 placeholder">
  	<p>
  	  <a class="btn btn-primary btn-lg btn-add-subcat" href="#" role="button"
  	     data-toggle="modal" data-target="#modalMaskCreateUserSubCategory" data-catId="{{ parentCategory.categoryId }}" data-catName="{{ parentCategory.categoryName }}">
             Unterkategorie hinzuf&uuml;gen
  	   </a>
  	</p>
  </div>
</div>
{% endblock %}


{# override showUserCategoriesCategoryTable #}
{% block showUserCategoriesCategoryTable %}
            {% for cat in userSubCategories %}
              <tr>
                 <td width="3%" align="right">{{ cat.categoryId }}</td>
                 <td width="80%">{{ cat.categoryName }}</td>
                 <td width="17%">
                    <div class="btn-group" role="group" aria-label="...">
                       <button type="button" class="btn btn-default btn-edit-maincat" data-toggle="modal" data-target="#modalMaskEditCategory" data-catId="{{ cat.categoryId }}" data-catName="{{ cat.categoryName }}">
                          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                       </button>
					   <button type="button" class="btn btn-default btn-delete-maincat" data-toggle="modal" data-target="#modalMaskDeleteCategory" data-catId="{{ cat.categoryId }}" data-catName="{{ cat.categoryName }}">
                          <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                       </button>
                    </div>
                 </td>
              </tr>
            {% endfor %}
{% endblock %}
   
{# override showUserCategoriesSpecificModals #}
{% block showUserCategoriesSpecificModals %}
	<!-- Beginn der modalen Maske zum Hinzufügen von UserSubCategories -->
	{{ render(controller('BrainappCoreBundle:Dashboard/DashboardUserCat:createUserSubCategory', {'parentCategory': parentCategory})) }}
	<!-- Ende der modalen Maske zum Hinzufügen von UserSubCategories -->
{% endblock %}
          