{#     {% endstylesheets %}#}
{% endblock %}

<div class="modal-body">
	<div role="form">
		<div class="form-group">
			<div class='input-group input-group input-widget'>
				<span class='input-group-addon input-group-widgetlabel' id='sizing-addon2'>Titel</span>
				{{ form_widget(mask_buchung.title) }}
			</div>
			<div class='input-group input-group input-widget'>
				<span class='input-group-addon input-group-widgetlabel' id='sizing-addon2'>Kommentar</span>
				{{ form_widget(mask_buchung.comment) }}
			</div>
			<div class='input-group input-group input-widget'>
				<span class='input-group-addon input-group-widgetlabel' id='sizing-addon2'>Datum</span>
                {{ form_widget(mask_buchung.date.day, { 'class':'select-date' }) }}
                {{ form_widget(mask_buchung.date.month) }}
                {{ form_widget(mask_buchung.date.year) }}
			</div>
			<div class='input-group input-group input-widget'>
				<span class='input-group-addon input-group-widgetlabel' id='sizing-addon2'>Betrag</span>
				{{ form_widget(mask_buchung.value) }}
			</div>
			<div class='input-group input-group input-widget'>
				<span class='input-group-addon input-group-widgetlabel' id='sizing-addon2'>Kategorie</span>
				{{ form_widget(mask_buchung.category) }}
			</div>
			<div class='input-group input-group input-widget'>
				<span class='input-group-addon input-group-widgetlabel' id='sizing-addon2'>Konto</span>
				{{ form_widget(mask_buchung.account) }}
			</div>
				{% block additionalFields %}
				{% endblock %}
		</div>
	</div>
</div>
<div class="modal-footer">
  {{ form_widget(mask_buchung.save) }}
  <button type="button" class="btn btn-default" data-dismiss="modal">Abbrechen</button> 
</div>

